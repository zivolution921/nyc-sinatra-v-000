<table>
  <th>Person Name</th>
  <tr>
    <td align="center"><a href="/figures/<%= @figure.id %>"><%= @figure.name %></a></td>
    <ul>
      Landmarks: 
        <% @figure.landmarks.each do |landmark| %>
        <li><%= landmark.name %></li>
        <% end %>
    </ul>
    <ul>
      Titles:
      <% @figure.titles.each do |title| %>
      <li><%= title.name %></li>
      <% end %>
    </ul>
  </tr>
</table>

<br>
<a class="button" href="/">Go Home</a>